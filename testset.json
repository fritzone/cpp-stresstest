{
  "setName": "Standard",
  "randomBehaviour" : false,

  "generateMakefile": true,
  "generateCMakeListsTxt": true,
  "compilationTimes": 1,
  "compilerFlags": "-O2 -pedantic -ansi -Wall -Wextra -std=c++11",
  "timeFlags": "-f '%E,%M'",
  "timedCompilation": true,
  "resultFormat": "CSV",

  "tests": [

    {
      "run": false,
      "testName": "parameterCountInFunctionDefinition",
      "count": [ "256", "1024", "2048", "4096", "8192", "16384" ],
      "minimum": "256",
      "description": "(2.11) Parameters in one function definition ([dcl.fct.def.general]) [256] and (2.12) Arguments in one function call ([expr.call]) [256]."
    },

    {
      "run": false,
      "testName": "nestingLevelsOfParenthesizedExpressionsInAFullExpression",
      "count": [ "512" ],
      "minimum": "256",
      "description": "(2.4) Nesting levels of parenthesized expressions ([expr.prim.paren]) within a full-expression [256]."
    },

    {
      "run": false,
      "testName" : "staticDataMemberOfClass",
      "count" : [ "1024", "2048", "4096", "8192", "16384" ],
      "minimum" : "1024",
      "description" : "(2.31) Static data members of a class ([class.static.data]) [1 024]."
    },

    {
      "run": false,
      "testName" : "directBaseClassesOfClass",
      "count" : ["1024", "2048", "4096", "8192", "16384"],
      "minimum" : "1024",
      "description" : "(2.27) Direct base classes for a single class ([class.derived]) [1 024]"
    },

    {
      "run": false,
      "testName" : "directAndIndirectBaseClassesOfClass",
      "count" : [ "16384", "32768", "65536" ],
      "minimum" : "16384",
      "description" : "(2.26) Direct and indirect base classes ([class.derived]) [16 384]"
    },

    {
      "run": false,
      "testName" : "macroCountInOneTranslationUnit",
      "count" : ["2048", "4096", "8192", "16384", "32768", "65536", "131072"],
      "minimum" : "65536",
      "description" : "(2.10) Macro identifiers ([cpp.replace]) simultaneously defined in one translation unit [65 536]."
    },

    {
      "run": false,
      "testName" : "parametersInMacroDefinition",
      "count" : ["256", "1024", "2048", "4096", "8192"],
      "minimum" : "256",
      "description" : "(2.13) Parameters in one macro definition ([cpp.replace]) [256] and (2.14) Arguments in one macro invocation ([cpp.replace]) [256]."
    },

    {
      "run": false,
      "testName" : "caseLabelsForSwitch",
      "count" : ["16384"],
      "minimum" : "16384",
      "description" : "(2.19) Case labels for a switch statement ([stmt.switch]) (excluding those for any nested switch statements) [16 384]."
    },

    {
      "run": false,
      "testName" : "nonStaticDataMembersOfClass",
      "count" : ["16384"],
      "minimum" : "16384",
      "description" : "(2.20) Non-static data members (including inherited ones) in a single class ([class.mem]) [16 384]"
    },

    {
      "run": false,
      "testName" : "enumerationConstantsInEnum",
      "count" : ["4096"],
      "minimum" : "4096",
      "description" : "(2.22) Enumeration constants in a single enumeration ([dcl.enum]) [4 096]."
    },

    {
      "run": true,
      "testName" : "friendsOfAClass",
      "count" : ["4096", "8192"],
      "minimum" : "4096",
      "description" : "(2.32) Friend declarations in a class ([class.friend]) [4 096]."
    }


  ]
}